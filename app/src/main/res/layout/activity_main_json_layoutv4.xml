<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:keepScreenOn="true"
    tools:context="com.weemscreekstudios.smartmirror1.SmartMirror1MainActivity">

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:elegantTextHeight="false"
        android:textSize="@dimen/abc_text_size_display_3_material"
        android:textColor="@android:color/white"
        android:format12Hour="E MMM-dd-yyyy\nhh:mm:ss aa"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textViewPercipitationTotal3Hrs"
        android:gravity="right" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Cheltenham"
            android:id="@+id/textViewCityName"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="30dp"
            android:singleLine="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="45.7 &apos;F"
            android:id="@+id/textViewCurrentTemp"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageViewWeatherIcon"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:nestedScrollingEnabled="true"
                android:src="@drawable/brokenicon" />
            //android:src="@drawable/brokenicon"
            android:background="@android:color/darker_gray"
            android:layout_weight="1" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="H 99 &apos;F"
                    android:id="@+id/textViewHiTemp"
                    android:background="@android:color/background_dark"
                    android:textColor="@android:color/white"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="L 10 &apos;F"
                    android:id="@+id/textViewLowTemp"
                    android:background="@android:color/background_dark"
                    android:textColor="@android:color/white"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="W 15 mph \u2196"
                    android:id="@+id/textViewWindSpeed"
                    android:background="@android:color/background_dark"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="H 00%"
                    android:id="@+id/textViewHumidity"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/background_dark"
                    android:textColor="@android:color/white"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="P 00.00&quot; \u2196"
                    android:id="@+id/textViewPressure"
                    android:textColor="@android:color/background_light"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:singleLine="true" />
            </LinearLayout>

        </LinearLayout>

    </TableRow>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="data @ "
            android:id="@+id/textView8"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="10:03"
            android:id="@+id/textViewDataTime"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="light intensity drizzle rain"
            android:id="@+id/textViewWeatherDescription"
            android:background="@android:color/background_dark"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:progress="10"
            android:progressTint="@android:color/darker_gray"
            android:layout_below="@+id/webView"
            android:layout_alignEnd="@+id/webView"
            android:layout_toEndOf="@+id/webView2"
            android:layout_weight="2"
            android:background="#434141" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="10:07:15"
            android:id="@+id/textViewLastUpdateTime"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:layout_below="@+id/progressBar"
            android:layout_alignStart="@+id/progressBar"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="10:27:15"
            android:id="@+id/textViewNextUpdateTime"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:layout_below="@+id/progressBar"
            android:layout_alignEnd="@+id/progressBar"
            android:layout_weight="1"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="clouds "
                android:id="@+id/textView7"
                android:background="@android:color/background_dark"
                android:textColor="@android:color/white"
                android:gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="50%"
                android:id="@+id/textViewCloudPercentage"
                android:background="@android:color/background_dark"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" \u2211rain  1.2&quot;/3hrs"
            android:id="@+id/textViewPercipitationTotal3Hrs"
            android:textColor="@android:color/white"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="2dp"
            android:gravity="right"
            android:layout_weight="1"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="sun\u2191"
                android:id="@+id/textView4"
                android:gravity="left"
                android:background="@android:color/background_dark"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="06:01 AM"
                android:id="@+id/textViewSunrise"
                android:background="@android:color/background_dark"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="sun\u2193"
                android:id="@+id/textView6"
                android:gravity="right"
                android:background="@android:color/background_dark"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="21:45 PM"
                android:id="@+id/textViewSunset"
                android:background="@android:color/background_dark"
                android:textColor="@android:color/white"
                android:layout_gravity="top"
                android:gravity="right" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView"
            android:layout_weight="1" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Weather"
        android:id="@+id/buttonUpdateWeather"
        android:layout_column="3"
        android:onClick="Update_Weather_OnClick"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Currency Rates"
        android:id="@+id/textView10"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="\u00a3/$ "
            android:id="@+id/textView3"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1.4XYZ"
            android:id="@+id/textViewGBPDollars"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="text"
            android:id="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="\u20AC/$"
            android:id="@+id/textView11"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1.0XYZ"
            android:id="@+id/textViewEuroDollars"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|left"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:id="@+id/imageViewFaceDetectIcon"
            android:src="@drawable/nopersonicon"
            android:layout_weight="1"
            android:baselineAlignBottom="false"
            android:layout_gravity="bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Net"
            android:id="@+id/textViewNetConnectStatus"
            android:layout_gravity="bottom"
            android:layout_weight=".25"
            android:background="@android:color/holo_red_dark"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:visibility="visible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="V#.##-#"
            android:id="@+id/textViewVersionNumber"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textAlignment="textEnd"
            android:singleLine="true" />
    </LinearLayout>

</LinearLayout>